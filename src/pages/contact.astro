---
import FAQ from "../components/FAQ.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

const title = "お問い合わせ";
---

<Layout title={title}>
  <section class="contact">
    <div class="contact__outer">
      <h2>お問い合わせ</h2>
    </div>
    <div class="contact__wrapper">
      <h3>お問い合わせ方法(連絡先)</h3>
      <ul>
        <li>
          <a
            href="https://twitter.com/pgwu_info"
            target="_blank"
            rel="nooper noreferrer"
            >・公式TwitterDM<br /> (クリックで公式Twitterに飛びます)</a
          >
        </li>
        <li>・WILL公式メール（pgwu.info@gmail.com）</li>
      </ul>
    </div>

    <FAQ />
  </section>
</Layout>

<style>
  h3 {
    font-weight: 500;
    font-size: 1.375rem;
    line-height: 1.1;
    letter-spacing: 0;
    color: #41475a;
  }

  ul {
    margin-top: 50px;
  }

  li {
    margin-top: 10px;
    font-weight: 500;
    font-size: 1.125rem;
    line-height: 2;
    letter-spacing: 0;
    color: #41475a;
  }

  a:hover {
    color: #4691d8;
  }

  .contact {
    padding: 0 4%;
  }

  .contact__outer {
    display: flex;
    align-items: center;
    justify-content: center;
    overflow-x: hidden;
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    min-height: 325px;
    background-image: url(/images/bgi_contact_sky.jpg);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .contact__wrapper {
    max-width: 1140px;
    margin: 130px auto 0;
  }

  @media screen and (min-width: 500px) {
    br {
      display: none;
    }
  }
</style>
